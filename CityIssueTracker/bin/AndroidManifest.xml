<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="byu.zappala.cityissuetracker"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-feature android:name="android.hardware.camera"
                  android:required="true" />
    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="byu.zappala.cityissuetracker.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="byu.zappala.cityissuetracker.ViewIssuesActivity"
            android:label="@string/title_activity_view_issues" >
        </activity>
        <activity
            android:name="byu.zappala.cityissuetracker.ViewIssueActivity"
            android:label="@string/title_activity_view_issue" >
        </activity>
        <activity
            android:name="byu.zappala.cityissuetracker.ReportIssueActivity"
            android:label="@string/title_activity_report_issue" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
</manifest>
